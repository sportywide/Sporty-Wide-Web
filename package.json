{
	"name": "root",
	"private": true,
	"description": "A Social network for Sports",
	"author": "Sporty Wide",
	"scripts": {
		"api-test": "ts-node e2e/api/api-test.ts",
		"bootstrap": "lerna bootstrap && link-parent-bin",
		"bootstrap:ci": "lerna bootstrap -- --ci --no-optional && link-parent-bin",
		"bootstrap:no-optional": "lerna bootstrap -- --no-optional && link-parent-bin",
		"bootstrap:prod": "lerna bootstrap -- --production --no-optional --ci && link-parent-bin -s true -d false -o false",
		"cz": "git add . && git-cz",
		"install:dependencies": "ts-node -T bin/install.ts",
		"test": "jest",
		"test:coverage": "npm test -- --coverage",
		"test:watch": "npm test -- --watch",
		"validate:ci": "cat .gitlab-ci.yml | curl --header \"Content-Type: application/json\" https://gitlab.com/api/v4/ci/lint --data @-"
	},
	"husky": {
		"hooks": {
			"pre-commit": "test -e .git/MERGE_HEAD || lint-staged"
		}
	},
	"lint-staged": {
		"*.{json,html,scss,yml}": [
			"pretty-quick --staged"
		],
		"*.{ts,js}": [
			"eslint --fix",
			"pretty-quick --staged"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-sportywide-changelog"
		}
	},
	"browserslist": [
		"last 2 versions",
		"ie >= 9",
		"safari >= 8"
	],
	"dependencies": {
		"link-parent-bin": "1.0.2"
	},
	"devDependencies": {
		"@babel/core": "7.5.5",
		"@babel/plugin-proposal-class-properties": "7.5.5",
		"@babel/plugin-proposal-decorators": "7.4.4",
		"@babel/preset-env": "7.5.5",
		"@babel/preset-typescript": "7.3.3",
		"@testing-library/jest-dom": "4.1.0",
		"@testing-library/react": "9.1.3",
		"@types/bull": "3.10.2",
		"@types/express": "4.17.1",
		"@types/jest": "24.0.18",
		"@types/next": "8.0.6",
		"@types/node": "12.7.2",
		"@types/nodemailer": "6.2.1",
		"@types/react": "16.9.2",
		"@types/sequelize": "4.28.4",
		"@types/styled-jsx": "2.2.8",
		"@types/yup": "0.26.23",
		"@webpack-blocks/babel": "2.0.1",
		"@webpack-blocks/webpack": "2.0.1",
		"@zeit/next-bundle-analyzer": "0.1.2",
		"@zeit/next-css": "1.0.1",
		"@zeit/next-sass": "1.0.1",
		"autoprefixer": "9.6.1",
		"babel-loader": "8.0.6",
		"babel-plugin-styled-components": "1.10.6",
		"babel-plugin-transform-typescript-metadata": "0.2.2",
		"copy-webpack-plugin": "5.0.4",
		"cssnano": "4.1.10",
		"file-loader": "4.2.0",
		"glob": "7.1.4",
		"ignore-loader": "0.1.2",
		"lerna": "3.16.4",
		"next-compose-plugins": "2.2.0",
		"next-plugin-custom-babel-config": "1.0.2",
		"node-sass": "4.12.0",
		"nodemon": "1.19.1",
		"npm-run-all": "4.1.5",
		"null-loader": "3.0.0",
		"sort-package-json": "1.22.1",
		"style-loader": "1.0.0",
		"ts-jest": "24.0.2",
		"ts-node": "8.3.0",
		"tsconfig-paths": "3.8.0",
		"typescript": "3.5.3",
		"url-loader": "2.1.0",
		"wait-on": "3.3.0",
		"webpack": "4.39.2",
		"webpack-cli": "3.3.7",
		"webpack-fix-style-only-entries": "0.3.1",
		"webpack-inject-plugin": "1.5.3",
		"webpack-node-externals": "1.7.2",
		"yargs": "14.0.0"
	},
	"optionalDependencies": {
		"@types/newman": "3.11.0",
		"@typescript-eslint/eslint-plugin": "2.0.0",
		"@typescript-eslint/parser": "2.0.0",
		"commitizen": "4.0.3",
		"cz-sportywide-changelog": "1.0.0",
		"eslint": "6.2.1",
		"eslint-config-prettier": "6.1.0",
		"eslint-plugin-import": "2.18.2",
		"eslint-plugin-prettier": "3.1.0",
		"eslint-plugin-react": "7.14.3",
		"husky": "3.0.4",
		"lint-staged": "9.2.3",
		"newman": "4.5.4",
		"newman-reporter-html": "1.0.3",
		"prettier": "1.18.2",
		"pretty-quick": "1.11.1"
	}
}
