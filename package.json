		"@babel/plugin-proposal-decorators": "7.4.4",
		"@babel/preset-env": "7.5.5",
		"@babel/preset-typescript": "7.3.3",
		"@types/bull": "3.10.1",
		"@types/express": "4.17.0",
		"@types/next": "8.0.6",
		"@types/node": "12.6.8",
		"@types/nodemailer": "6.2.1",
		"@types/react": "16.8.23",
		"@types/sequelize": "4.28.4",
		"@types/styled-jsx": "2.2.8",
		"@types/yup": "0.26.22",
		"@typescript-eslint/eslint-plugin": "1.13.0",
		"@typescript-eslint/parser": "1.13.0",
		"@webpack-blocks/babel": "2.0.1",
		"@webpack-blocks/webpack": "2.0.1",
		"next-plugin-custom-babel-config": "1.0.2",
		"@zeit/next-bundle-analyzer": "0.1.2",
		"@zeit/next-typescript": "1.1.1",
		"@zeit/next-css": "1.0.1",
		"@zeit/next-sass": "1.0.1",
		"next-compose-plugins": "2.2.0",
		"babel-loader": "8.0.6",
		"babel-plugin-transform-typescript-metadata": "0.2.2",
		"clean-webpack-plugin": "3.0.0",
		"commitizen": "4.0.3",
		"copy-webpack-plugin": "5.0.3",
		"cross-env": "5.2.0",
		"cz-leremede-changelog": "1.0.1",
		"eslint": "6.1.0",
		"eslint-config-prettier": "6.0.0",
		"eslint-plugin-import": "2.18.2",
		"eslint-plugin-prettier": "3.1.0",
		"eslint-plugin-react": "7.14.3",
		"fork-ts-checker-webpack-plugin": "1.3.7",
		"file-loader": "4.2.0",
		"husky": "3.0.1",
		"lerna": "3.16.4",
		"lint-staged": "9.2.0",
		"nodemon": "1.19.1",
		"node-sass": "4.12.0",
		"npm-run-all": "4.1.5",
		"prettier": "1.18.2",
		"pretty-quick": "1.11.1",
		"ts-node": "8.3.0",
		"tsconfig-paths": "3.8.0",
		"typescript": "3.4.5",
		"url-loader": "2.1.0",
		"wait-on": "3.3.0",
		"webpack": "4.37.0",
		"webpack-cli": "3.3.6",
		"webpack-node-externals": "1.7.2",
		"yargs": "13.3.0"
	},
	"dependencies": {
		"link-parent-bin": "1.0.2"
	},
	"scripts": {
		"bootstrap": "lerna bootstrap && link-parent-bin",
		"bootstrap:prod": "lerna bootstrap -- --production --no-optional --ci && link-parent-bin -s true -d false -o false",
		"cz": "git add . && git-cz",
		"install:dependencies": "ts-node -T bin/install.ts"
	},
	"config": {
		"commitizen": {
			"path": "cz-leremede-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "test -e .git/MERGE_HEAD || lint-staged",
			"prepare-commit-msg": "test -e .git/MERGE_HEAD || exec < /dev/tty && git cz --hook"
		}
	},
	"browserslist": [
		"last 2 versions",
		"ie >= 9",
		"safari >= 8"
	],
	"lint-staged": {
		"*.{json,html,scss}": [
			"pretty-quick --staged"
		],
		"*.{ts,js}": [
			"eslint --fix",
			"pretty-quick --staged"
		]
	}
}
