{
	"compilerOptions": {
		"lib": ["esnext"],
		"module": "commonjs",
		"target": "es5",
		"baseUrl": "./",
		"outDir": "./dist",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noEmit": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": true,
		"sourceMap": true,
		"paths": {
			"@root/*": ["./*"],
			"@web/*": ["./packages/sw-web/src/*"],
			"@shared/*": ["./packages/sw-shared/src/*"],
			"@build/*": ["./packages/sw-shared/build/*"],
			"@api/*": ["./packages/sw-api/src/*"],
			"@schema/*": ["./packages/sw-schema/src/*"],
			"@core/*": ["./packages/sw-core/src/*"],
			"@email/*": ["./packages/sw-email/src/*"]
		}
	},
	"exclude": ["node_modules"]
}
